<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/GreenHillWhite"
    tools:context="com.example.charl.motif.GalleryMenuActivity">

    <ImageView
        android:id="@+id/greenhill_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/greenhillbanner"
        android:contentDescription="@string/greenhill_banner_description"/>

    <ImageView
        android:id="@+id/nelson_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greenhill_banner"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nelson"
        android:onClick="artistOnClick"
        />

    <ImageView
        android:id="@+id/martiny_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nelson_button"
        android:src="@drawable/martiny"
        android:onClick="artistOnClick"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        />

    <ImageView
        android:id="@+id/stewart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/martiny_button"
        android:src="@drawable/stewart"
        android:onClick="artistOnClick"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
